  <body>
  <div class = itin>
  <h1> Check It Out! </h1>
    <h2>Remember Everywhere When You're There!

     What would you like to do?
    </h2>
    <h3> If you're a first time user:.............no logins!</h3>
   <ul>
   <!--  opening the Javascript -->


  <% everyTrip.forEach(function(everyTrip){ %>

        <form action="CheckItOut/<%=everyTrip.id%>" method="POST">
            <button type="submit">✔️ Visited!</button>
        </form>
        <form >
            <button type="submit" formmethod="POST" formaction="CheckItOut/<%=everyTrip.id%>/delete?_method=DELETE">✔️ Delete</button>
        </form>
       <!--  closing the Javascript -->
        <div class = description>
        <span class = category> Landmark </span> <%= everyTrip.landmark %>
       <span class = category> City </span> <%= everyTrip.city %>
       <span class = category> Comment </span> <%=everyTrip.comment %><%


     }); %>
       </div>
</ul>
</div>
<div class = links>
<a href="CheckItOut/New" class="CRUDButton">Planning a New Trip</a>
<a href="CheckItOut/AlreadyVisited" class="CRUDButton">Been There, Done That</a>
 </div>
